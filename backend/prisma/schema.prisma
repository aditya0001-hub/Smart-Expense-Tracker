generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAT DateTime @updatedAt

  transactions Transaction[]
  categories   Category[]
  budgets      Budget[]

  @@map("users")
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String
  userId       Int
  createdAt    DateTime      @default(now())
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]
  budgets      Budget[]

  @@unique([name, userId])
  @@map("categories")
}

model Transaction {
  id          Int             @id @default(autoincrement())
  amount      Decimal         @db.Decimal(10, 2)
  type        TransactionType
  description String?
  date        DateTime
  userId      Int
  categoryId  Int
  createdAt   DateTime        @default(now())
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    Category        @relation(fields: [categoryId], references: [id])

  @@index([userId, date])
  @@map("transactions")
}

model Budget {
  id         Int       @id @default(autoincrement())
  month      Int
  year       Int
  amount     Decimal   @db.Decimal(10, 2)
  userId     Int
  categoryId Int?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category? @relation(fields: [categoryId], references: [id])

  @@unique([userId, month, year, categoryId])
  @@map("budgets")
}

enum TransactionType {
  INCOME
  EXPENSE
}
