{

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
  "moduleResolution": "NodeNext",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },

  "include": ["src/**/*", "src/prisma"],
  "exclude": ["node_modules", "dist", "prisma", "generated"]



